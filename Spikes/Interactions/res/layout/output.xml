<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
   <TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Output"
    android:textSize="20sp"
    />
    <TableLayout
    	android:stretchColumns="2"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
    	<TableRow>
    		<ImageView
    			android:background="@drawable/back2"
    			android:layout_margin="10dip"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"/>
    		<TextView
    			android:layout_margin="10dip"
    			android:text="Lift arm, Lift leg, Lift the other arm, Lift both legs."
    			android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:width="0dip"
    			/>
    	</TableRow>
    	<TableRow>
    		<ImageView
    			android:layout_margin="10dip"
    			android:layout_width="wrap_content"
    			android:background="@drawable/neck2"
    			android:layout_height="wrap_content"/>
    		<TextView
    			android:layout_margin="10dip"
    			android:text="Lift your right leg and touch your left ear"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"/>
    	</TableRow>
    	<TableRow>
    		<ImageView
    			android:layout_margin="10dip"
    			android:layout_width="wrap_content"
    			android:background="@drawable/back2"
    			android:layout_height="wrap_content"/>
    		<TextView
    			android:layout_margin="10dip"
    			android:layout_width="wrap_content"
    			android:text="Rotate back 360 degrees"
    			android:layout_height="wrap_content"/>
    	</TableRow>
    </TableLayout>
    <EditText
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:hint="Notes"
    	android:layout_weight="1"
    	android:gravity="top"
    	
    	/>
    <Button
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="Send Activities"
	android:id="@+id/newBttn"
	/>
</LinearLayout>